<%- include('./maintainanceNavbar') %>

<div class="container my-3">
    <h1 align="center">Add Book/Movie</h1>

    <form action="/addBook" method="post">
        
        <div class="mb-3">
            <div class="mb-1">
                Choose
            </div>
            <span class="mx-2">
                <label for="book" class="form-label">Book</label>
                <input type="radio" name="role" id="book" value="book" checked>
            </span>
            
            <span class="mx-3">
                <label for="movies" class="form-label">Movie</label>
                <input type="radio" name="role" value="movie" id="movies">
            </span>
            
        </div>
        
        <div class="mb-3">
          <label for="name" class="form-label">Book/Movie Name</label>
          <input type="text" class="form-control" name="name" id="name">
        </div>
    
          <div class="mb-3">
            <label for="quantity" class="form-label">Quantity/Copies</label>
            <input type="text" class="form-control" name="quantity" value="1" id="quantity">
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


